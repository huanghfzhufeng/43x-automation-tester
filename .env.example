# ===========================================
# 基础信息
# ===========================================
APP_NAME=创业者模拟Agent 

# ===========================================
# LLM 模型1—— 使用 OpenAI GPT-4
# ===========================================
LLM_MODEL=gpt-4o-mini
LLM_BASE_URL=https://api.openai.com/v1
LLM_API_KEY=your-openai-api-key-here
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_TIMEOUT=60

# ===========================================
# LLM 模型2—— 使用Gemini
# ===========================================
GEMINI_MODEL=openrouter/google/gemini-2.5-flash
GEMINI_BASE_URL=https://openrouter.ai/api/v1
GEMINI_API_KEY=your-gemini-api-key-here

# ===========================================
# 图像 LLM 配置（用于 PPT、图片处理等）
# ===========================================
IMAGE_LLM_MODEL=gpt-4o-mini
IMAGE_LLM_BASE_URL=https://openrouter.ai/api/v1
IMAGE_LLM_API_KEY=your-image-llm-api-key-here

# ===========================================
# RAG 服务配置（向量数据库）
# ===========================================
# ChromaDB 存储路径
CHROMA_DB_PATH=./chroma_db
# 向量检索返回的最大结果数
RAG_TOP_K=5
# 相似度阈值（0-1，越高越严格）
RAG_SIMILARITY_THRESHOLD=0.7

# ===========================================
# 内存管理配置
# ===========================================
# 会话数据存储路径
SESSION_STORAGE_PATH=./sessions
# 最大上下文 token 数
MAX_CONTEXT_TOKENS=8000
# 摘要触发阈值（token 数）
SUMMARY_THRESHOLD=6000
# 是否启用自动摘要
ENABLE_AUTO_SUMMARY=true

# ===========================================
# 文件处理配置
# ===========================================
# 支持的最大文件大小（MB）
MAX_FILE_SIZE=50
# 文本分块大小（字符数）
CHUNK_SIZE=1000
# 分块重叠大小（字符数）
CHUNK_OVERLAP=200
# 是否启用 OCR（图片文字识别）
ENABLE_OCR=true

# ===========================================
# 应用配置
# ===========================================
APP_ENV=dev
APP_LOG_LEVEL=INFO
APP_AGENT_SERVICE_PORT=8001