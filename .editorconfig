# EditorConfig 配置文件
# 确保所有编辑器使用统一的代码格式
# https://editorconfig.org

root = true

# 所有文件的默认配置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python 文件
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# JavaScript 文件
[*.js]
indent_style = space
indent_size = 2
max_line_length = 100

# JSON 文件
[*.json]
indent_style = space
indent_size = 2

# YAML 文件
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown 文件
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# HTML 文件
[*.html]
indent_style = space
indent_size = 2

# CSS 文件
[*.css]
indent_style = space
indent_size = 2

# Shell 脚本
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Makefile
[Makefile]
indent_style = tab
